####w#####     Configuration    #########
###           the easy stuff         ###
    font pango: SF Pro Display 14

    # Key to do all the things (Mod1=Alt, Mod4=Super/Windows)
        set $mod Mod4


# change focus
 bindsym $mod+j focus left
 bindsym $mod+k focus down
 bindsym $mod+l focus up
 bindsym $mod+semicolon focus right
 # alternatively, you can use the cursor keys:
 bindsym $mod+Left focus left
 bindsym $mod+Down focus down                                                  
 bindsym $mod+Up focus up
 bindsym $mod+Right focus right                                                
  
# # move focused window                                                         
# bindsym $mod+Shift+j move left                                                
# bindsym $mod+Shift+k move down                                                
# bindsym $mod+Shift+l move up                                                  
# bindsym $mod+Shift+semicolon move right                                       

# alternatively, you can use the cursor keys:                                 
 bindsym $mod+Shift+Left move left                                             
 bindsym $mod+Shift+Down move down                                             
 bindsym $mod+Shift+Up move up                                                 
bindsym $mod+Shift+Right move right  




    # Default Terminal
        set $term st-256color

    # Autofocus on hover, also when switching workspaces
        focus_follows_mouse yes

    # Borders
        # Also removes all title bars
        default_floating_border pixel 9

        # Hide borders at the edge of the screen
        hide_edge_borders smart

        client.focused           #9aa5ce #364A82 #c0caf5 #9aa5ce   #9aa5ce
        client.focused_inactive  #16161d #16161d #c0caf5 #16161d   #16161d
        client.unfocused         #16161d #16161d #c0caf5 #16161d   #16161d

    # Gaps
        gaps inner	10
        gaps outer	10
        gaps top	10
        gaps bottom	10

	gaps left	10
	gaps right	10

        # Hide gaps when there is only 1 window
        #smart_gaps on

	# Activate smart borders (always)
	smart_borders on

	# Activate smart borders (only when there are effectively no gaps)
	smart_borders no_gaps
	
	# rounded corners
	border_radius 10

#########       Launchers      #########
###         Menu for commands        ###

    # Program Launcher
        bindsym $mod+space exec rofi -no-config -no-lazy-grab -show drun -modi drun -theme ~/.config/polybar.pre/grayblocks/scripts/rofi/launcher.rasi

    # Power menu
        bindsym $mod+P exec /home/neray/.config/wofi/wofi-power.sh


